/* pages/cart/cart.wxss */
page {
  margin-bottom: 90rpx;
}
.add {
  margin: 10rpx 0;
}
.add .addressDetail {
  height: 88rpx;
}
.cartItem {
  display: flex;
  width: 100%;
}
.cartItem .check {
  flex: 1;
}
.cartItem .img {
  flex: 2;
  height: 100%;
}
.cartItem .img .imgNav {
  width: 100%;
  height: 100%;
}
.cartItem .img .imgNav image {
  width: 200rpx;
}
.cartItem .desc {
  flex: 4;
}
.cartItem .desc .price_num {
  display: flex;
  justify-content: space-around;
}
.cartItem .desc .price_num .price {
  color: var(--themColor);
}
.cartItem .desc .price_num .num {
  display: flex;
  font-size: 32rpx;
  text-align: center;
}
.cartItem .desc .price_num .num .subcount,
.cartItem .desc .price_num .num .addcount {
  width: 55rpx;
  height: 55rpx;
  line-height: 55rpx;
  border: 1px solid #ccc;
}
.cartItem .desc .price_num .num .number {
  width: 55rpx;
  height: 55rpx;
}
.bottom {
  display: flex;
  position: fixed;
  width: 100%;
  height: 90rpx;
  left: 0;
  bottom: 0;
}
.bottom .all {
  flex: 4;
}
.bottom .total {
  flex: 4;
}
.bottom .total .money .money_num {
  color: var(--themColor);
}
.bottom .calc {
  text-align: center;
  background-color: #123456;
  color: aliceblue;
  line-height: 90rpx;
  flex: 2;
}
